{
    "name": "NestJS Dev Container",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "esbenp.prettier-vscode",
      "dbaeumer.vscode-eslint"
    ],
    "forwardPorts": [3000],
    "postCreateCommand": "npm ci",
    "remoteUser": "node"
  }